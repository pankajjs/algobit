generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Problem {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  title           String  @unique
  description     String
  difficulty      String
  editorial       String?
  testCases       TestCase[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

type TestCase {
  input String
  output String
}