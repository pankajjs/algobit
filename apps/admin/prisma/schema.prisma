generator client {
  provider = "prisma-client-js"
  output = "../../../node_modules/@prisma/client/admin"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Problem {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  title           String  @unique
  description     String
  difficulty      String
  editorial       String?
  testCases       TestCase[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  codestubs       CodeStub[]
  timeLimit       Int
}

type CodeStub{
  language      String
  userSnippet   String
  startSnippet  String
  endSnippet    String
}

type TestCase {
  input String
  output String
}